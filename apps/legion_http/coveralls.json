{
  "custom_stop_words": [
    "embedded_schema",
    "schema",
    "defmacro",
    "defenum",
    "using",
    "setup"
  ],

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "coverage/"
  },

  "terminal_options": {
    "file_column_width": 100
  },

  "skip_files": [
    "test/support",
    "priv",
    "lib/http/application.ex",
    "lib/http/endpoint.ex",
    "lib/http/utils/error_helpers.ex",
    "lib/legion_http.ex",
    "lib/http/common/changeset_view.ex"
  ]
}
