{
  "default_stop_words": [
    "embedded_schema",
    "schema",
    "defmacro",
    "defenum",
    "using",
    "setup",
    "defstruct"
  ],

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "coverage/"
  },

  "terminal_options": {
    "file_column_width": 150
  },

  "skip_files": [
    "test/support",
    "lib/stereotype.ex",
    "priv",
    "lib/mix",
    "lib/logger",
    "lib/application.ex",
    "lib/repo.ex",
    "lib/legion.ex",
    "viewdecl"
  ]
}
