{
  "tags": [
    "user",
    "severe",
    "messaging"
  ],
  "summary": "Sends a message to specified user(s)\n",
  "description": "Sends an in-platform message to specified user(s). This does not allow proxy invocations.\n",
  "operationId": "sendMessage",
  "parameters": [
    {
      "name": "message",
      "in": "body",
      "description": "Properties of the message being sent.",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "recipients": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            },
            "minLength": 1,
            "maxLength": 20
          },
          "body": {
            "type": "string",
            "maxLength": 4096
          }
        }
      }
    },
    {
      "name": "id",
      "in": "path",
      "description": "Identifier of the sender user.",
      "required": true,
      "type": "integer",
      "format": "int64"
    }
  ],
  "responses": {
    "201": {
      "description": "Returns the message sent.",
      "schema": {
        "type": "object",
        "properties": {
          "sender": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "format": "int64",
                "description": "Identifier of the platform user."
              },
              "username": {
                "type": "string",
                "description": "Username of the user."
              }
            }
          },
          "recipients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "format": "int64",
                  "description": "Identifier of the platform user."
                },
                "username": {
                  "type": "string",
                  "description": "Username of the user."
                }
              }
            },
            "minLength": 1,
            "maxLength": 20
          },
          "body": {
            "type": "string",
            "maxLength": 4096
          }
        }
      }
    },
    "404": {
      "description": "One of the recipients cannot be found."
    }
  }
}
