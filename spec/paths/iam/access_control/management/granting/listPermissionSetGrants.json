{
  "tags": [
    "user",
    "access_control",
    "mediocre"
  ],
  "summary": "Lists permission set grants",
  "description": "Retrieves a list of permission set grants.",
  "operationId": "listPermissionSetGrants",
  "parameters": [
    {
      "name": "id",
      "in": "path",
      "required": true,
      "description": "Identifier of the permission set.",
      "type": "integer",
      "format": "int64"
    },
    {
      "name": "authority_id",
      "in": "query",
      "required": false,
      "description": "Identifier of the authority of the grant.",
      "type": "integer",
      "format": "int64"
    },
    {
      "name": "grantee_id",
      "in": "query",
      "required": false,
      "description": "Identifier of the grantee.",
      "type": "integer",
      "format": "int64"
    },
    {
      "name": "is_active",
      "in": "query",
      "required": false,
      "description": "A boolean value indicating whether grant is still active.",
      "type": "integer",
      "format": "int64"
    },
    {
      "name": "limit",
      "in": "query",
      "description": "Limits the number of entities found in response.",
      "required": false,
      "type": "integer",
      "default": 20,
      "minimum": 1,
      "maximum": 40
    },
    {
      "name": "offset",
      "in": "query",
      "description": "Skips given number of entities to provide pagination.",
      "required": false,
      "type": "integer",
      "default": 0,
      "minimum": 0
    }
  ],
  "responses": {
    "200": {
      "schema": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64",
              "description": "Identifier of the permission set grant."
            },
            "user_ids": {
              "type": "array",
              "items": {
                "type": "integer",
                "format": "int64"
              },
              "description": "An array containing identifiers of the platform users being granted."
            },
            "permission_set": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "format": "int64",
                  "description": "Identifier of the permission set."
                },
                "name": {
                  "type": "string",
                  "description": "Name of the permission set."
                }
              }
            },
            "authority": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "format": "int64",
                  "description": "Identifier of the authority."
                },
                "username": {
                  "type": "string",
                  "description": "Username of the authority."
                },
                "representational_name": {
                  "type": "string",
                  "description": "Representational name of the authority."
                }
              }
            },
            "valid_after": {
              "$ref": "#/definitions/Timestamp",
              "description": "The time grant will be valid after."
            },
            "valid_until": {
              "$ref": "#/definitions/Timestamp",
              "description": "The time grant will remain valid until."
            },
            "invalidation_status": {
              "type": "object",
              "properties": {
                "invalidated_at": {
                  "$ref": "#/definitions/Timestamp",
                  "description": "The time grant was manually invalidated."
                },
                "authority": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "format": "int64",
                      "description": "Identifier of the authority."
                    },
                    "username": {
                      "type": "string",
                      "description": "Username of the authority."
                    },
                    "representational_name": {
                      "type": "string",
                      "description": "Representational name of the authority."
                    }
                  }
                }
              }
            },
            "inserted_at": {
              "$ref": "#/definitions/Timestamp",
              "description": "The time grant order was created."
            }
          }
        }
      },
      "description": "Response containing list of permission set grants."
    }
  }
}
