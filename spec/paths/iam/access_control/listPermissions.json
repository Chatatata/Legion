{
  "tags": [
    "access_control",
    "safe"
  ],
  "summary": "Lists permissions",
  "description": "Lists permissions found in platform",
  "operationId": "listPermissions",
  "parameters": [
    {
      "name": "controller_name",
      "in": "query",
      "description": "Name of the permission controller.",
      "type": "string",
      "required": false
    },
    {
      "name": "controller_action",
      "in": "query",
      "description": "Affected action of the permission controller.",
      "type": "string",
      "required": false
    },
    {
      "name": "type",
      "in": "query",
      "description": "Type of the permission.",
      "type": "string",
      "required": false,
      "enum": ["index", "show", "create", "update", "delete"]
    },
    {
      "name": "severity",
      "in": "query",
      "description": "Severity of the action.",
      "type": "string",
      "required": false,
      "enum": ["secure", "mediocre", "severe"]
    },
    {
      "name": "limit",
      "in": "query",
      "description": "Limits the number of entities found in response.",
      "required": false,
      "type": "integer",
      "default": 80,
      "minimum": 1,
      "maximum": 160
    },
    {
      "name": "offset",
      "in": "query",
      "description": "Skips given number of entities to provide pagination.",
      "required": false,
      "type": "integer",
      "default": 0,
      "minimum": 0
    }
  ],
  "responses": {
    "200": {
      "schema": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64",
              "description": "Identifier of the permission."
            },

            "controller_name": {
              "type": "string",
              "description": "Name of the permission controller.",
              "enum": ["index", "show", "create", "update", "delete"]
            },

            "controller_action": {
              "type": "string",
              "description": "Affected action of the permission controller.",
              "enum": ["secure", "mediocre", "severe"]
            },

            "severity": {
              "type": "string",
              "description": "Severity of the action.",
              "enum": ["secure", "mediocre", "severe"]
            }
          }
        }
      },
      "description": "Response contains permissions."
    }
  }
}
