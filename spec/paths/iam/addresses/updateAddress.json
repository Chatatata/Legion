{
  "tags": [
    "user",
    "addresses",
    "mediocre"
  ],
  "summary": "Updates given address of user\n",
  "description": "Upserts given personal address entry to the existing address entry of the user with given identifier.\n",
  "operationId": "updateAddress",
  "parameters": [
    {
      "name": "user_id",
      "in": "path",
      "required": true,
      "description": "Identifier of the platform user.",
      "type": "integer",
      "format": "int64"
    },
    {
      "name": "address_id",
      "in": "path",
      "required": true,
      "description": "Identifier of the address entry.",
      "type": "integer",
      "format": "int64"
    },
    {
      "name": "address_information",
      "in": "body",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "home",
              "work",
              "other"
            ],
            "description": "Type of the address."
          },
          "name": {
            "type": "string",
            "description": "The given name for the address of the user."
          },
          "country": {
            "type": "string",
            "description": "The country of the residence."
          },
          "state": {
            "type": "string",
            "description": "The state of the residence."
          },
          "city": {
            "type": "string",
            "description": "The city of the residence."
          },
          "neighborhood": {
            "type": "string",
            "description": "The neighborhood of the residence."
          },
          "address": {
            "type": "string",
            "description": "Optional details for the address."
          },
          "description": {
            "type": "string",
            "description": "Description for the address to enhance ease of search."
          },
          "zip_code": {
            "type": "string",
            "description": "The zip code of the residence."
          }
        }
      }
    }
  ],
  "responses": {
    "200": {
      "description": "Personal address entry is updated.\n"
    },
    "400": {
      "description": "The supplied personal address is invalid, the action is rolled back. *Refer to the body of the response.*\n"
    },
    "404": {
      "description": "The user with given identifier or address entry with given identifier could not be found. *Refer to the body of the response.*\n"
    }
  }
}
