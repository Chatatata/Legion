{
  "tags": [
    "user",
    "severe",
    "scheme:insecure_authentication"
  ],
  "summary": "Changes the password of the user\n",
  "description": "Replaces the password of the user with given one.",
  "operationId": "changePassword",
  "parameters": [
    {
      "name": "id",
      "in": "path",
      "description": "Identifier of the user.",
      "required": true,
      "type": "integer",
      "format": "int64"
    },
    {
      "in": "body",
      "name": "change_password",
      "description": "Properties of the password changing operation.\n",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "old_password": {
            "type": "string",
            "maximum": 25,
            "minumum": 3,
            "description": "Old password of the user.\n"
          },
          "new_password": {
            "type": "string",
            "maximum": 25,
            "minumum": 3,
            "description": "New password of the user.\n"
          }
        }
      }
    }
  ],
  "responses": {
    "201": {
      "description": "Response indicating password changing operation has been completed."
    },
    "422": {
      "description": "The given parameters were invalid for the changing password."
    }
  }
}
