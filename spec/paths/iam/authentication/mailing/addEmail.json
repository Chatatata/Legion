{
  "tags": [
    "user",
    "mailing",
    "mediocre"
  ],
  "summary": "Adds given email to the user\n",
  "description": "Adds given email entry to the emails of the user.",
  "operationId": "addEmail",
  "parameters": [
    {
      "name": "id",
      "in": "path",
      "required": true,
      "description": "Identifier of the platform user.",
      "type": "integer",
      "format": "int64"
    },
    {
      "name": "entry",
      "in": "body",
      "schema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "The email address going to be added."
          }
        }
      }
    }
  ],
  "responses": {
    "201": {
      "description": "Email entry is saved to the user."
    },
    "400": {
      "description": "The email was invalid."
    },
    "404": {
      "description": "The user cannot be found."
    },
    "409": {
      "description": "Email entry already exists."
    }
  }
}
