{
  "tags": [
    "mailing"
  ],
  "summary": "Update circular mailing template\n",
  "description": "Upserts given circular mailing template properties to the existing template entry of the given identifier.\n",
  "operationId": "updateCircularMailingTemplate",
  "parameters": [
    {
      "name": "mail_template_id",
      "in": "path",
      "required": true,
      "description": "Identifier of the circular mailing template.",
      "type": "integer",
      "format": "int64"
    },
    {
      "in": "body",
      "name": "circular_mailing_template",
      "description": "Properties of the new circular mailing template.\n",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the new template.\n"
          },
          "description": {
            "type": "string",
            "description": "Description of the template."
          },
          "template_body": {
            "type": "string",
            "default": 0,
            "minimum": 0,
            "maximum": 1048576,
            "description": "EEX template to be parameterized.\n"
          },
          "owner_id": {
            "type": "integer",
            "format": "int64",
            "description": "Template owner user identifier."
          }
        }
      }
    }
  ],
  "responses": {
    "200": {
      "description": "Circular mailing template updated succesfully.\n"
    },
    "422": {
      "description": "The supplied circular mailing template parameters is invalid, the action is rolled back. *Refer to the body of the response.*\n"
    }
  }
}
