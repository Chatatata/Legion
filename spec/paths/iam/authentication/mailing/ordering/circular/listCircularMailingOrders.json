{
  "tags": [
    "mailing"
  ],
  "summary": "Lists circular mailing orders\n",
  "description": "Lists circular mailing orders found in platform",
  "operationId": "listCircularMailingOrders",
  "parameters": [
    {
      "name": "owner_id",
      "in": "query",
      "description": "User id of the owner",
      "type": "integer",
      "required": false
    },
    { "name": "mail_template_id",
      "in": "query",
      "description": "Circular mail template identifier.",
      "type": "integer",
      "required": false
    },
    {
      "name": "limit",
      "in": "query",
      "description": "Limits the number of entities found in response.",
      "required": false,
      "type": "integer"
    },
    {
      "name": "offset",
      "in": "query",
      "description": "Skips given number of entities to provide pagination.",
      "required": false,
      "type": "integer"
    }
  ],
  "responses": {
    "200": {
      "schema": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64",
              "description": "Identifier of the order."
            },
            "send_afer": {
              "type": "integer",
              "format": "int64",
              "description": "Referral time (seconds) of the order."
            },
            "is_sent": {
              "type": "boolean",
              "description": "Sending status of the mail."
            },
            "owner_id": {
              "type": "integer",
              "format": "int64",
              "description": "Identifier of the owner user."
            },
            "user_ids": {
              "type": "array",
              "items": {
                "type": "integer",
                "format": "int64"
              },
              "description": "Name of the circular mailing template."
            }
          }
        }
      }
    }
  }
}
