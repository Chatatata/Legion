{
  "tags": [
    "user",
    "safe",
    "telephony"
  ],
  "summary": "Adds a phone number",
  "description": "Adds a phone number to the personal information of the user.",
  "operationId": "addPhoneNumber",
  "parameters": [
    {
      "name": "phone_number",
      "in": "body",
      "required": true,
      "description": "New phone number to be going added.",
      "schema": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "home",
              "mobile",
              "work",
              "home_fax",
              "work_fax",
              "pager"
            ],
            "description": "Description of the phone number."
          },
          "number": {
            "type": "string",
            "description": "Phone number of a user represented with only numerical letters, e.g. \"00902121234567\"."
          }
        }
      }
    },
    {
      "name": "id",
      "in": "path",
      "required": true,
      "description": "Identifier of the platform user.",
      "type": "integer",
      "format": "int64"
    }
  ],
  "responses": {
    "201": {
      "description": "Phone number has been saved to the platform."
    }
  }
}
